<p id="notice"><%= notice %></p>

<h1>Listing Game Reviews</h1>
<h1>MoldyPepper</h1>

<%= form_tag(game_reviews_path, method: :get) do %>
  <p> Search for a Game</p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("search") %>
<% end %>

<table class="table table-striped col-md-12" id="game_reviews">
  <thead>
    <tr>
      <th><%= link_to "Game Name", :sort => "name"%></th>
      <th><%= link_to "genre", :sort => "genre"%></th>
      <th>Developer</th>
      <th>Description</th>
      <th>Review</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_reviews.each do |game_review| %>
      <tr>
        <td><%= game_review.name %></td>
        <td><%= game_review.genre %></td>
        <td><%= game_review.developer %></td>
        <td><%= game_review.description %></td>
        <td><%= game_review.review %></td>
        <td><%= game_review.stars %></td>
        <td><%= link_to 'Show', game_review %></td>
        <td><%= button_to 'Delete', game_review, :method => 'delete', :confirm => 'Are you sure?' %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>

